{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2022",
		"sourceMap": false,
		"allowJs": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
		},
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules/*",
		"dist/*",
	],
}
